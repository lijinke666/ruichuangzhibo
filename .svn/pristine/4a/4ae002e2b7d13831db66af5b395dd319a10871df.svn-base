<script src="newJs/jquery-1.11.3.js"></script>
<script src="newJs/script.js"></script>
<script src="newJs/LjkUpLoad.js"></script>
<script src="newJs/jquery.validate.min.js"></script>
<script src="newJs/validate.config.js"></script>
<script>
$(function(){
    var $add_video_form = $("form[name='add-videosForm']");
    //判断还可输入多少字
    $add_video_form.checkWords();


    var ljkUpload = new LjkUpload($(".add-videos"));
    var addVideoBox = $(".add-video-box");
    //显示
    ljkUpload.showImage({
        fileSelectBtn:addVideoBox,
        fileBtn:$("#imgFile"),
        showEle:addVideoBox,
        isImage:true,
        maxSize:1024       //最大5M
    });
    //个人中心 修改个人资料
    $add_video_form.validate({
        errorClass: 'v-error',
        errorElement: 'em',
        debug: true,
        highlight: function (element, errorClass) {
            $(element).parent().addClass(errorClass);
        },
        unhighlight: function (element, errorClass) {
            $(element).parent().removeClass(errorClass);
        },
        messages:{
            imgFile:{
                required:'请选择视频封面'
            },
            biaoti:{
                required:'请填写视频标题',
                minlength:'视频标题过短',
                maxlength:'视频标题过长'
            },
            nowPrice:{
                required:"请填写视频现价",
                digits:'请输入正确的价格（整数）'
            },
            oldPrice:{
                required:"请填写视频原价",
                digits:'请输入正确的价格（整数）'
            },
            info:{
                required:'请填写视频简介',
                minlength:'视频简介过短',
                maxlength:'视频简介过长'
            }
        },
        submitHandler: function (form) {
            var loading;
            $.ajax({
                url: "",
                type: "post",
                data: $("form[name='add-videosForm']").serialize(),
                dataType: "json",
                beforeSend: function () {
                    loading = new rcLoading("请稍后..");
                },
                success: function (data) {
                    loading.remove();
                    rcAlert("添加成功", true);
                },
                error: function () {
                    loading.remove();
                    rcAlert("添加失败", false);
                }
            });
        }
    });
})

</script>
