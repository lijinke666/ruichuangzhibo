<script>
    $(function(){
        var $btn_chapter_remove = $(".btn-chapter-remove");
        $btn_chapter_remove.on("click",function(){
            var $this = $(this);
            var $id = $this.data('id'),
                rc;
            rcConfirm('你确定要删除吗?',function( index ){
                if( index==1 ){
                    $.ajax({
                        url:"",
                        type:"post",
                        data:{id:$id},
                        dataType:"json",
                        beforeSend:function(){
                            rc = new rcLoading('处理中,请稍后...');
                        },
                        success:function(){
                            rc.remove();
                            rcAlert('删除成功',true);
                            $this.parent().parent().remove();
                        },
                        error:function(){
                            rc.remove();
                            rcAlert('删除失败',false);
                        }
                    })

                }
            },{'确定':'btn-primary','取消':'btn-cancel'})
        })
    })
</script>
