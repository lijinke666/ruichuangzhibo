<script src="newJs/jquery.validate.min.js"></script>
<script src="newJs/validate.config.js"></script>
<script>
$(function(){
    var $add_chapter_form = $("form[name='add-chapterForm']");
    //判断还可输入多少字
    $add_chapter_form.checkWords();
//    var ljkUpload = new LjkUpload($(".add-chapter"));
//    ljkUpload.showImage({
//        fileSelectBtn:$(".select-video"),
//        fileBtn:$("#videoFile"),
//        showEle:$(".show-video-box"),
//        isImage:false,
//        maxSize:200*1024       //200M
//    });

    //个人中心 修改个人资料
    $add_chapter_form.validate({
        errorClass: 'v-error',
        errorElement: 'em',
        debug: true,
        highlight: function (element, errorClass) {
            $(element).parent().addClass(errorClass);
        },
        unhighlight: function (element, errorClass) {
            $(element).parent().removeClass(errorClass);
        },
        messages:{
            videoFile:{
                required:'请选择视频'
            },
            biaoti:{
                required:'请填写视频标题',
                minlength:'视频标题过短',
                maxlength:'视频标题过长'
            },
            info:{
                required:'请填写视频简介',
                minlength:'视频简介过短',
                maxlength:'视频简介过长'
            }
        },
        submitHandler: function (form) {
            var rc;
            if(!$('body').hasClass("upload")){
                rcAlert('请上传章节视频');
                return false;
            }
            $.ajax({
                url:"",
                type:"post",
                data:$add_chapter_form.serialize(),
                dataType:"json",
                beforeSend:function(){
                    rc = new rcLoading('处理中,请稍后');
                },
                success:function(){
                    rc.remove();
                    rcAlert('添加成功',true)
                },
                error:function(){
                    rc.remove();
                    rcAlert('添加失败',false)
                }
            })
        }
    });
})

</script>
